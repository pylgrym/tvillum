extends layout

block content
  h1= item.title

  form(action="/page/#{Number(current2)-1}", class="spanny")
    button(title="Previous article.")
      i(class="fa fa-arrow-left fa-2x")

  form(action="/page", class="spanny",method='get')
    input(type="text", name="current2", value= current2, class="faorm-control")
    button(type="submit",hidden="true") s

  form(action="/page/#{Number(current2)+1}", class="spanny")
    button(title="Next article.")
      i(class="fa fa-arrow-right fa-2x")

  form(action="reset", class="spanny")
    button(title="Reset - refresh the list of articles.")
      i(class="fa fa-ambulance fa-2x")

  div(width="100%")
    each val in comments
      div(class="unit")
        div(class="author")  #{val.author}
        div(class="comment")!= val.comment
